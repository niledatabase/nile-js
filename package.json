{
  "name": "@niledatabase/packages",
  "license": "MIT",
  "version": "0.0.2",
  "private": true,
  "workspaces": [
    "lib/*",
    "packages/*"
  ],
  "scripts": {
    "build:browser": "yarn workspace @niledatabase/browser build",
    "build:react-storybook": "yarn build && yarn workspace @niledatabase/react build-storybook",
    "build:react": "yarn workspace @niledatabase/react build",
    "build:server": "yarn workspace @niledatabase/server build",
    "build:edge": "yarn workspace @niledatabase/edge build",
    "build": "yarn build:server && yarn build:edge && yarn build:browser && yarn build:react",
    "lint": "yarn eslint . --max-warnings=0",
    "postinstall": "husky install",
    "prepare": "husky install",
    "publish": "yarn lerna publish",
    "test:browser": "yarn workspace @niledatabase/browser test",
    "test:react": "yarn workspace @niledatabase/react test",
    "test:server": "yarn workspace @niledatabase/server test"
  },
  "devDependencies": {
    "@commitlint/cli": "17.8.1",
    "@commitlint/config-conventional": "17.8.1",
    "@types/mime": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.54.0",
    "eslint-config-next": "^13.5.6",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.15",
    "husky": "8.0.3",
    "lerna": "^6.6.2",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8",
    "prettier-eslint": "^15.0.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "packages/**/**/*.{mjs,js,ts,jsx,tsx}": "yarn lint --cache --fix .",
    "lib/nile/src/*.{mjs,js,ts,jsx,tsx}": "yarn lint --cache --fix  ."
  },
  "packageManager": "yarn@4.1.1"
}
