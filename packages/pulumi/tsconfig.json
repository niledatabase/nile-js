{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "incremental": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES6",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
