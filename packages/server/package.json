{
  "name": "@niledatabase/server",
  "version": "2.5.0-alpha.0",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/server.esm.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0"
  },
  "scripts": {
    "start": "dts watch",
    "build:spec": "mkdir -p public && yarn next-swagger-doc-cli src/api/openapi/swagger-doc.json",
    "build": "yarn build:spec && dts build --tsconfig ./tsconfig.build.json",
    "test": "dts test",
    "integration": "NODE_ENV=DEV dts test integration",
    "lint": "eslint src",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "jrea",
  "repository": {
    "type": "git",
    "url": "https://github.com/niledatabase/nile-js.git",
    "directory": "packages/server"
  },
  "publishConfig": {
    "access": "public"
  },
  "size-limit": [
    {
      "path": "dist/server.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/server.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@babel/core": "^7.23.3",
    "@openapitools/openapi-generator-cli": "^2.13.4",
    "@types/jest": "^29.5.9",
    "@types/lodash": "^4",
    "@types/lodash-es": "^4",
    "@types/mime": "^4.0.0",
    "@types/pg": "^8.11.4",
    "@typescript-eslint/parser": "^5.62.0",
    "babel-loader": "^9.1.3",
    "dts-cli": "^2.0.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "next-swagger-doc": "^0.4.0",
    "size-limit": "^8.2.6",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "jose": "^4.15.4",
    "pg": "^8.11.3"
  }
}
