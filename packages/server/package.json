{
  "name": "@niledatabase/server",
  "version": "1.0.0-alpha.195",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.0"
  },
  "scripts": {
    "start": "tsdx watch",
    "build:spec": "yarn swagger-cli bundle openapi/index.json --outfile openapi/spec.json -r",
    "build": "yarn build:spec && tsdx build --tsconfig ./tsconfig.build.json",
    "test": "yarn jest",
    "lint": "eslint src",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "jrea",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheNileDev/nile-js.git",
    "directory": "packages/server"
  },
  "publishConfig": {
    "access": "public"
  },
  "size-limit": [
    {
      "path": "dist/server.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/server.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@babel/core": "^7.20.12",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/parser": "^5.49.0",
    "babel-loader": "^9.1.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "size-limit": "^8.1.2",
    "ts-jest": "^29.1.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@niledatabase/js": "^1.0.0-alpha.195",
    "knex": "^2.4.2",
    "pg": "^8.10.0"
  }
}
